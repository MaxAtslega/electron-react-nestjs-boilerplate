{
  "name": "electron-react-nest-boilerplate",
  "version": "1.0.0",
  "description": "A app",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "npm-run-all -p dev:react electron:serve",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js --mode development && npm run start:electron",
    "dev:react": "cross-env NODE_ENV=development webpack serve --config webpack/react.webpack.js --mode development",
    "electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
    "start:electron": "electron .",
    "build": "npm-run-all build:electron build:react",
    "build:run": "npm-run-all build start:electron",
    "build:electron": "cross-env NODE_ENV=production webpack --config webpack/electron.webpack.js --mode production",
    "build:react": "cross-env NODE_ENV=production webpack --config webpack/react.webpack.js --mode production",
    "package": "npm-run-all build package:dist",
    "package:dist": "electron-builder --dir",
    "test": "jest",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "Max Atslega <max@atslega.de>",
  "license": "MIT",
  "dependencies": {
    "@nestjs/cli": "^8.1.1",
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/testing": "^8.0.6",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "core-js": "^3.16.0",
    "electron-store": "^8.0.0",
    "moment": "^2.29.1",
    "passport": "^0.4.1",
    "passport-headerapikey": "^1.2.2",
    "passport-local": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "^0.13.9",
    "source-map-support": "^0.5.19",
    "styled-components": "^5.3.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@babel/plugin-proposal-decorators": "7.16.7",
    "@babel/plugin-transform-runtime": "7.16.10",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@commitlint/core": "13.1.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "16.4.13",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/styled-components": "5.1.21",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "@webpack-cli/init": "1.1.3",
    "babel-loader": "8.2.3",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-preset-react": "6.24.1",
    "commitizen": "4.2.4",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "electron": "13.1.9",
    "electron-builder": "22.11.7",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-standard": "4.1.0",
    "eslint-plugin-unused-imports": "1.1.3",
    "fork-ts-checker-webpack-plugin": "6.3.2",
    "html-webpack-plugin": "5.3.2",
    "jest": "27.4.7",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "regenerator-runtime": "0.13.9",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0",
    "supertest": "6.2.2",
    "ts-jest": "27.0.4",
    "ts-loader": "9.2.5",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.5.5",
    "wait-on": "6.0.0",
    "webpack": "5.50.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "3.11.2",
    "webpack-node-externals": "3.0.0",
    "webpack-shell-plugin-next": "2.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git://git.atslega.network/MaxAtslega/electron-react-nest-boilerplate.git"
  },
  "build": {
    "productName": "electron-react-nest-boilerplate",
    "appId": "de.atslega.ernb",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "buildResources": "assets",
      "output": "packages"
    },
    "extraResources": [
      "./assets/**"
    ],
    "files": [
      "package.json",
      "dist/**",
      "./assets/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
